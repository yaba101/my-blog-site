---

import PageLayout from '../layouts/PageLayout.astro'
import PageMeta from '../components/PageMeta.astro'
import { SITE_TITLE } from '../config'
import { getCollection } from 'astro:content'

const blogs = await getCollection('blog')

const sortedPosts = blogs
	.filter((p) => p.data.draft !== true)
	.sort(
		(a, b) =>
			new Date(b.data.date).valueOf() -
			new Date(a.data.date).valueOf()
	)
---

<PageLayout>
	<PageMeta title={`Blog | ${SITE_TITLE}`} slot='meta' />
	<section slot='main'>
		<ul>
			{
				sortedPosts.map((post) => {
					const formattedDate = new Date(
						post.data.date
					).toLocaleDateString('en-us', {
						year: 'numeric',
						month: 'short',
						day: 'numeric',
					})
					return (
						<li class='grid grid-cols-[1fr] md:grid-cols-[1fr_auto] mb-3 md:gap-2 items-start'>
							<div class='title'>
								{post.data.external ? (
									<a
										href={post.data.url}
										target='_blank'
										class='unset hover:text-text-link'>
										<span>{post.data.title}</span>
										<span>
											<i class='ml-1 mr-1 text-[12px] pb-2 fa-solid fa-up-right-from-square pt-1' />
										</span>
									</a>
								) : (
									<a
										href={`/blog/${post.slug}`}
										class='unset hover:text-text-link'>
										{post.data.title}
									</a>
								)}
							</div>
							<div class='text-text-muted text-sm italic'>
								<time datetime={post.data.date.toISOString()}>
									{formattedDate}
								</time>
							</div>
						</li>
					)
				})
			}
		</ul>
	</section>
</PageLayout>
