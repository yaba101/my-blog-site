---
import { Icon } from 'astro-icon'
interface Props {
	text: string
	logo: string
}

const { text, logo } = Astro.props
---

<li class='flex items-center gap-4 before:content-none'>
	<span
		class='w-11 h-11 flex items-center justify-center border-t border-zinc-700 dark:bg-zinc-800 bg-zinc-600 rounded-full'
		><Icon name={logo} class='w-6' />
	</span>
	<span class='dark:text-zinc-400 text-zinc-900'>{text}</span>
</li>
